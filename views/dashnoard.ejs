<!doctype html>
<html>
<head>
    <title>dashboard</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.orange-indigo.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script defer src="https://code.getmdl.io/1.1.3/material.min.js"></script>
    <script src="https://canvas-gauges.com/download/latest/all/gauge.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>

</head>
<body>
  <div class="demo-layout mdl-layout mdl-js-layout mdl-layout--fixed-header">
  <!-- Header section containing title -->
  <header class="mdl-layout__header mdl-color-text--white mdl-color--green-800">
    <div class="mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-grid">
      <div class="mdl-layout__header-row mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-cell--8-col-desktop">
        <!-- <a href="/dashboard/ <%= uid %>" id="logo"><img class="logo1" src='Influxdb_logo.png'><h2 class="logo1" id="logo_title">Dashboard</h2></a> -->
        <a href="/logout">
          <button id="sign-out-button" class="mdl-button--raised mdl-button mdl-js-button mdl-js-ripple-effect"><i class="material-icons">account_circle</i> Sign out</button>
        </a>  
        <a href="/logout">
          <button id="small-out" class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored"><i class="material-icons">power_settings_new</i></button>
        </a>       
      </div>
    </div>
  </header>     
      
  <main >
      <!-- Container for the demo -->
      <div class="header">
          <div >
            <h2 >USER INFO</h2>
          </div>
          <div >
            <!-- Container where we'll display the user details -->
            <div >
                User ID: <span id="quickstart-sign-in-status"><%= uid %></span><br>
              User Siged In with: <span id="quickstart-sign-in-status"><%= email %></span><br>
             
            </div>
          </div>
        </div>
        
    </main>
 
    <div>
        <form action="dashnoard">
            <input type="submit" class="btn" value="Refresh">
        </form>
    </div>
  <%
  if(userData.length!=0){
  var i=1;
  userData.forEach(function(data){
  %>
    <table border="1">
    
        <tr>
            <th>S.N</th>
            <th>Temp</th>
            <th>Humidity</th>
            <th>EC</th>
            <th>PH</th>
            <th>Time</th>
            <th>date</th>
        </tr>
        
       
        <tr>
            <td><%=i; %></td>
            <td><%=data.Temp %></td>
            <td><%=data.Humidity %></td>
            <td><%=data.EC %></td>
            <td><%=data.PH %></td>
            <td><%=data.Time %></td>
            <td><%=data.Date %></td>
            <!-- <td><a href="/users/edit/<%=data.id%>">Edit</a></td>
            <td><a href="/users/delete/<%=data.id%>">Delete</a></td> -->
        </tr>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found</td>
            </tr>
        <% } %>
    </table>
</div>

</body>
</html>