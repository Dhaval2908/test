<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://unpkg.com/tailwingdcss@^1.0/dist/tailwind.min.css">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="text-center">
  <header class="text-gray-400 bg-gray-900 body-font">
    <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
      <a class="flex title-font font-medium items-center text-white mb-4 md:mb-0">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-linecap="round"
          stroke-linejoin="round" stroke-width="2" class="w-10 h-10 text-white p-2 bg-indigo-500 rounded-full"
          viewBox="0 0 24 24">
          <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
        </svg>
        <span class="ml-3 text-xl">Hydrophonics</span>
      </a>
      <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center">
        <a href="dashboard" class="mr-5 hover:text-white">DashBoard</a>
        <a class="mr-5 hover:text-white">Analysis</a>
        <a class="mr-5 hover:text-white">Log out</a>
        <a class="mr-5 hover:text-white"></a>
      </nav>
      <form action="dashboard" method="post">
        <input type="submit"
          class="inline-flex items-center bg-gray-800 border-0 py-1 px-3 focus:outline-none hover:bg-gray-700 rounded text-base mt-4 md:mt-0"
          value="Refresh">
      </form>
    </div>
  </header>
  <div class="py-4 inline-block min-w-full sm:px-6 lg:px-8 font-medium text-lg text-black"> Set Schedule</div>
  <section class="text-gray-400 bg-gray-900 body-font">
    <div class="py-4 inline-block min-w-full sm:px-6 lg:px-8  text-black">
      <div class="flex lg:w-2/3 w-full sm:flex-row flex-col mx-auto px-8 sm:space-x-4 sm:space-y-0 space-y-4 sm:px-0 items-end justify-center">
        <form class="w-full max-w-lg" action="schedule" method="POST">
          <div class="flex flex-wrap -mx-3 mb-2">
            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
              <label class="block uppercase tracking-wide text-white text-xs font-bold mb-2">
                Start Time:
              </label>
              <input type="time" name="starttime" required
                class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
            </div>
            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
              <label class="block uppercase tracking-wide text-white text-xs font-bold mb-2 ">
                End Time:
              </label>
              <input type="time" name="endtime" required
                class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
            </div>
            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
              <label class="block uppercase tracking-wide text-white text-xs font-bold mb-2 py-2">
              </label>
              <button
                class="text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg">SET</button>
            </div>
          </div>
        </form>
      </div>
  </section>
  <section>
    <div class="flex flex-col">
      <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-4 inline-block min-w-full sm:px-6 lg:px-8">
          <% if(ScheduleData.length!=0){ var i=1; ScheduleData.forEach(function(data){ %>
            <% if(i==1){ %>
              <table class="min-w-full  ">
                <thead class="border-b bg-gray-800">
                  <tr>
                    <th scope="col" class="text-base text-lg text-white px-6 py-4">
                      No.
                    </th>
                    <th scope="col" class="text-base text-lg text-white px-6 py-4">
                      Start Time
                    </th>
                    <th scope="col" class="text-base text-lg text-white px-6 py-4">
                      End Time
                    </th>
                    <th scope="col" class="text-base text-lg text-white px-6 py-4">
                      Delete
                    </th>
                  </tr>
                </thead class="border-b">
                <% } %>
                  <tbody>
                    <% if(i%2==0){ %>
                      <tr class="bg-gray-100 border-b">
                        <% } else{ %>
                      <tr class="bg-white border-b">
                        <% } %>
                          <td class="px-6 py-4 whitespace-nowrap text-base font-medium text-gray-900 ">
                            <%=i%>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap text-base font-medium text-gray-900">
                            <%=data.StartHr %>:<%=data.StartMin %>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap text-base font-medium text-gray-900">
                            <%=data.EndHr %>:<%=data.EndMin %>
                          </td>
                          <td class=" px-6 py-4 whitespace-nowrap text-base font-medium text-gray-900">
                            <form action="/delete?StartHr=<%=data.StartHr %>&StartMin=<%=data.StartMin %>"
                              method="post">
                              <button type="submit"
                                class="bg-blue-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">Remove
                              </button>
                            </form>
                          </td>
                      </tr>
                      <% i++; }) %>
                        <% } else{ %>
                          <table class="min-w-full  ">
                            <tr class="bg-white border-b font-medium">
                              <td class="py-4 inline-block min-w-full sm:px-6 lg:px-8 text-base text-lg text-black"
                                colspan="4">No Schedule Found</td>
                            </tr>
                            <% } %>
                          </table>
                  </tbody>
              </table>
        </div>
      </div>
    </div>
    </div>
  </section>
</body>
</html>